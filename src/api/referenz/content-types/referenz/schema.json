{
  "kind": "collectionType",
  "collectionName": "referenzen",
  "info": {
    "singularName": "referenz",
    "pluralName": "referenzen",
    "displayName": "Referenz",
    "description": "Referenzprojekte und Kundenstimmen"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titel": {
      "type": "string",
      "required": true,
      "description": "Projekttitel"
    },
    "slug": {
      "type": "uid",
      "targetField": "titel"
    },
    "beschreibung": {
      "type": "richtext",
      "required": true,
      "description": "Projektbeschreibung"
    },
    "kunde_name": {
      "type": "string",
      "description": "Name des Kunden (optional)"
    },
    "kunde_typ": {
      "type": "enumeration",
      "enum": [
        "privatperson",
        "unternehmen",
        "hausverwaltung",
        "wohnungsbaugesellschaft",
        "oeffentlich"
      ],
      "default": "privatperson"
    },
    "projekt_datum": {
      "type": "date",
      "description": "Datum der Projektdurchf√ºhrung"
    },
    "dauer": {
      "type": "string",
      "description": "Projektdauer (z.B. 3 Tage)"
    },
    "vorher_bilder": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "nachher_bilder": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "testimonial": {
      "type": "text",
      "description": "Kundenstimme/Bewertung"
    },
    "bewertung": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 5,
      "description": "Sterne-Bewertung"
    },
    "stadtteil": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::stadtteil.stadtteil",
      "inversedBy": "referenzprojekte"
    },
    "services": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service",
      "mappedBy": "referenzprojekte"
    },
    "herausforderungen": {
      "type": "json",
      "description": "Array von besonderen Herausforderungen"
    },
    "ergebnisse": {
      "type": "json",
      "description": "Array von erreichten Ergebnissen"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Auf Startseite anzeigen?"
    },
    "reihenfolge": {
      "type": "integer",
      "default": 0,
      "description": "Sortierreihenfolge"
    }
  }
}
